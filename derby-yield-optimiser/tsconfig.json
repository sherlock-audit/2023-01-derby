{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist",
    "baseUrl": ".",
    "moduleResolution": "node",
    "paths": {
      "@typechain": [
        "typechain-types"
      ],
      "@artifacts/*": [
        "artifacts/contracts/*"
      ],
      "@testhelp/*": [
        "test/helpers/*"
      ],
    }
  },
  "include": [
    "./scripts",
    "./test",
    "./test-mainnet",
    "index.d.ts",
    "./typechain-types",
    "./hardhat.config.ts",
    "./deploy",
    "./tasks",
    "deploy",
    "deploySettings.ts",
    "tasks/controller_tasks.ts",
  ],
  "files": [
    "./hardhat.config.ts",
  ]
}